<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :content, :as => :text %>
  	<%= f.input :name %>
  	<%= f.input :email %>
  	<%= f.input :active %>
  </div>
	<br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
